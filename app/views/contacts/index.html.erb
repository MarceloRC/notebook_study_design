<p id="notice"><%= notice %></p>

<h1><%= t('models.contact') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t ('contact.name') %></th>
      <th><%= t ('contact.email') %></th>
      <th><%= t ('contact.kind')%></th>
      <th><%= t ('contact.rmk')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to t('buttons.show'), contact, class: "button"  %></td>
        <td><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "button"  %></td>
        <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('menssages.confirm') }, class: "button"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new_contact'), new_contact_path, class: "button" %>
