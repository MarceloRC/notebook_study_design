<p id="notice"><%= notice %></p>

<h1><%= t('models.address')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('address.street') %></th>
      <th><%= t('address.city') %></th>
      <th><%= t('address.state') %></th>
      <th><%= t('contact.contact') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to t('buttons.show'), address %></td>
        <td><%= link_to t('buttons.edit'), edit_address_path(address) %></td>
        <td><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('menssages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('address.address_new'), new_address_path %> |
